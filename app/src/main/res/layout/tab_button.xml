<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tab_button_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/tab_button_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tab_button_parent"
        app:layout_constraintLeft_toLeftOf="@id/tab_button_parent"
        app:layout_constraintRight_toRightOf="@id/tab_button_parent"/>

    <TextView
        android:id="@+id/tab_button_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack6"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tab_button_icon"
        app:layout_constraintLeft_toLeftOf="@id/tab_button_parent"
        app:layout_constraintRight_toRightOf="@id/tab_button_parent"
        app:layout_constraintBottom_toBottomOf="@id/tab_button_parent"/>

    <TextView
        android:id="@+id/tab_button_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        app:layout_constraintRight_toRightOf="@id/tab_button_parent"
        app:layout_constraintTop_toTopOf="@id/tab_button_parent"/>

</android.support.constraint.ConstraintLayout>